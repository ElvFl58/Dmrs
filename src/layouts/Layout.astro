---
import "../styles/global.css";
import Header from "../components/shared/Header.astro";
// import Footer from "../components/shared/Footer.astro";
import Aside from "../components/shared/Aside.jsx";
import Modal from "../components/Modal.jsx";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>

  <body class="h-screen w-[100%] relative">
    <!-- Overlay sutil -->
    <div class="absolute top-0 left-0 w-full h-full bg-black/40"></div>
    <Header  />
    <Aside client:load  />
    <slot />
    <!-- <Footer/> -->
     <!-- <Modal client:load /> -->
  </body>
  <style is:global>
    html,
    body {
      margin: 0;
      padding: 0;

      cursor:
        url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='32' height='32'><text y='24' font-size='24'>ðŸ’–</text></svg>")
          16 16,
        auto;
    }
    .heart-trail {
      position: fixed;
      pointer-events: none;
      font-size: 18px;
      transform: translate(-50%, -50%);
      animation: fadeOut 0.8s ease-out forwards;
    }

    @keyframes fadeOut {
      from {
        opacity: 1;
        transform: translate(-50%, -50%) scale(1);
      }
      to {
        opacity: 0;
        transform: translate(-50%, -50%) scale(1.5);
      }
    }
  </style>

  <script type="text/javascript">
    document.addEventListener("mousemove", (e) => {
      const heart = document.createElement("span");
      heart.className = "heart-trail";
      heart.textContent = ["ðŸ’–", "ðŸ’•", "ðŸ’˜", "ðŸ’ž", "â¤ï¸"][
        Math.floor(Math.random() * 4)
      ];
      heart.style.left = e.clientX + "px";
      heart.style.top = e.clientY + "px";
      document.body.appendChild(heart);

      setTimeout(() => heart.remove(), 800);
    });
  </script>
</html>
