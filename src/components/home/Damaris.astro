<!-- Componente: Te Amo Kat -->
<div id="katLove" class="kat-container">
  <!-- Video de fondo -->
  <video autoplay muted loop class="kat-video">
    <source src="medias/fondo/01.mp4" type="video/mp4" />
  </video>

  <!-- Corazones animados -->
  <div id="heartsContainer"></div>

  <!-- Mensaje central -->
  <h1 class="kat-message">Te amo Damaris üíñ</h1>
</div>

<style>
  .kat-container {
    position: relative;
    width: 100%;
    height: 100vh;
    overflow: hidden;
    display: flex;
    justify-content: center;
    align-items: center;
    background: black;
  }

  .kat-video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
    opacity: 0.6;
  }

  .kat-message {
    position: relative;
    z-index: 2;
    font-size: 4rem;
    text-align: center;
    color: #ff69b4;
    text-shadow:
      0 0 20px #ff69b4,
      0 0 40px #ff1493,
      0 0 60px #ff69b4;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%,
    100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.1);
    }
  }

  #heartsContainer {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 2;
  }

  .heart {
    position: absolute;
    font-size: 1.5rem;
    color: #ff1493;
    animation: floatUp linear infinite;
    opacity: 0;
  }

  @keyframes floatUp {
    0% {
      transform: translateY(0) scale(1);
      opacity: 0;
    }
    10% {
      opacity: 1;
    }
    100% {
      transform: translateY(-400px) scale(1.2);
      opacity: 0;
    }
  }

  @media (max-width: 640px) {
    .kat-message {
      font-size: 2.5rem;
    }
    .heart {
      font-size: 1rem;
    }
  }
</style>

<script type="text/javascript">
  // Crear corazones flotando
  const heartsContainer = document.getElementById("heartsContainer");

  function createHeart() {
    const heart = document.createElement("div");
    heart.className = "heart";
    heart.style.left = Math.random() * 100 + "%";
    heart.style.animationDuration = 4 + Math.random() * 3 + "s";
    heart.style.fontSize = 1.5 + Math.random() * 2 + "rem";
    heart.textContent = "‚ù§Ô∏è";
    heartsContainer.appendChild(heart);

    setTimeout(() => {
      heartsContainer.removeChild(heart);
    }, 7000); // duraci√≥n suficiente para animaci√≥n
  }

  setInterval(createHeart, 500); // crear un coraz√≥n cada 0.5s
</script>
