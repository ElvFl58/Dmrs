<header
  class="fixed top-0 left-0 w-full z-40 bg-black/50 backdrop-blur-md border-b border-pink-800/30 shadow-lg"
>
  <div
    class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex justify-between items-center h-16"
  >
    <!-- Logo / Título -->
    <h1
      class="text-2xl sm:text-3xl font-extrabold text-pink-300 drop-shadow-lg tracking-wide"
    >
      💖 Mi Amor
    </h1>

    <!-- Menú de escritorio -->
    <nav class="hidden sm:flex space-x-6 text-white text-lg">
      <a
        href="/"
        class="hover:text-pink-200 transition duration-300 font-medium"
        >Inicio</a
      >
      <a
        href="/cumple"
        class="hover:text-pink-200 transition duration-300 font-medium"
        >🎉🎉🎉</a
      >
      <a
        href="/historia"
        class="hover:text-pink-200 transition duration-300 font-medium"
        >Historia</a
      >
    </nav>

    <!-- Botón hamburguesa móvil -->
    <div class="sm:hidden">
      <button
        id="menu-btn"
        class="text-pink-300 hover:text-pink-200 focus:outline-none focus:ring-2 focus:ring-pink-300 rounded"
      >
        <svg
          class="w-8 h-8"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          viewBox="0 0 24 24"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </div>

  <!-- Menú desplegable móvil -->
  <div
    id="mobile-menu"
    class="sm:hidden hidden bg-black/70 backdrop-blur-md border-t border-pink-800/30"
  >
    <nav class="flex flex-col space-y-2 px-4 py-3 text-center  gap-2 text-write">
      <a
        href="/"
        class="hover:text-pink-200 transition duration-300 text-write font-medium bg-pink-400 rounded-3xl w-[100px] m-auto"
        >Inicio</a
      >
      <a
        href="/cumple"
        class="hover:text-pink-200 transition duration-300 text-write font-medium bg-pink-400 rounded-3xl w-[100px] m-auto"
        >🎉🎉🎉</a
      >
      <a
        href="/historia"
        class="hover:text-pink-200 transition duration-300 text-write font-medium bg-pink-400 rounded-3xl w-[100px] m-auto "
        >Historia❤️</a
      >
    </nav>
  </div>

  <script type="text/javascript">
    const menuBtn = document.getElementById("menu-btn");
    const mobileMenu = document.getElementById("mobile-menu");
    menuBtn.addEventListener("click", () => {
      mobileMenu.classList.toggle("hidden");
    });
  </script>
</header>
